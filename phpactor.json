{
    "extensions": [
        "phpactor/phpactor-extension",
        "phpactor/phpunit-extension"
    ],
    "cache-dir": "/path/to/cache",
    "log-file": "/path/to/log.txt",
    "lint": {
        "enabled": true,
        "standard": "PSR2"
    },
    "completion": {
        "override": {
            "MyClass": {
                "foo": "string",
                "bar": "int"
            }
        }
    },
    "references": {
        "fqn": true,
        "short": false
    },
    "navigator": {
        "follow": true
    },
    "formatter": {
        "enable": true,
        "indentation": "spaces",
        "indentation-width": 2
    }
}

